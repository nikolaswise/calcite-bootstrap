{
  "name": "calcite-bootstrap",
  "title": "Calcite Boostrap",
  "version": "2.0.0",
  "description": "Calcite Bootstrap is a UI Kit built on the popular Bootstrap CSS framework based on the Calcite design framework.",
  "homepage": "https://github.com/Esri/calcite-bootstrap",
  "scripts": {
    "start": "npm run dev",
    "html": "copyfiles -f ./lib/index.html ./dist",
    "js": "copyfiles -f ./node_modules/bootstrap-sass/assets/javascripts/bootstrap.js ./dist/javascript",
    "fonts": "copyfiles -f ./node_modules/bootstrap-sass/assets/fonts/bootstrap/* ./dist/fonts/bootstrap",
    "sass": "node-sass lib/ --include-path node_modules -o dist/",
    "docs": "copyfiles -f ./dist/calcite-bootstrap.css ./docs/build/assets/css",
    "predev": "npm-run-all html sass js fonts docs",
    "dev": "parallelshell 'http-server dist/' 'rerun-script'"
  },
  "watches": {
    "html": "lib/index.html",
    "sass": "lib/*.scss"
  },
  "main": "dist/js/calcite-boostrap.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/esri/calcite-bootstrap.git"
  },
  "contributors": [
    {
      "name": "Erich Rainville",
      "email": "erainville@esri.com"
    },
    {
      "name": "Julio Ochoa",
      "email": "jochoa@esri.com"
    }
  ],
  "files": [
    "dist/"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/esri/calcite-bootstrap/issues"
  },
  "devDependencies": {
    "calcite-web": "github:esri/calcite-web#v1.0.0-beta.20",
    "copyfiles": "^1.0.0",
    "http-server": "^0.9.0",
    "node-sass": "^3.5.3",
    "npm-run-all": "^1.8.0",
    "parallelshell": "^2.0.0",
    "rerun-script": "^0.6.0"
  },
  "dependencies": {
    "bootstrap-sass": "^3.3.6"
  }
}
